@using GestionImpresoras.Models
@model Color
@{
    ViewData["Title"] = "Editar Colores para tóner de Impresoras";
}
<h1>Editar Color</h1>
<h3>@Model.Nombre</h3>
<hr />
<form asp-action="Edit" asp-controller="Colores" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre de Estado" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <!---------------  Botones summit y cancelar  ------------->
    <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Aplicar</button>
    <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-backspace"></i> Cancelar</a>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}