@model EstadoSolicitud

@{
    ViewData["Title"] = "Crear Estados de Solicitudes";
}

<h1>Crear Estado de Solicitudes</h1>
<h5>Se refiere a los estados en el cual se encuentra las Solicitudes </h5>
<hr />

    <form asp-action="Crear" asp-controller="EstadoSolicitudes" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3 form-group">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre de Estado " />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group">
        <label asp-for="Descripcion" class="form-label">Descripcion</label>
        <input type="text" asp-for="Descripcion" class="form-control" placeholder="Ingresa la descripción del Estado" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
