@using GestionImpresoras.Models;
@model Medio
@{
    ViewData["Title"] = "Crear nuevo Medio";
}
<h1>Crear Medio</h1>
<h5>Se refiere a los Medios por los cuales se ha realizado la solicitud</h5>
<hr />
<form asp-action="Crear" asp-controller="Medios" method="post">

    <div class="mb-3 form-group">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingrese el Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group form-check">
        <label asp-for="ConRespuesta" class="form-check-label">¿Con Respuesta?  <i class="bi bi-bell-fill text-success"></i></label>
        <input asp-for="ConRespuesta" type="checkbox" class="form-check-input" />
        <span asp-validation-for="ConRespuesta" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <input type="text" asp-for="Descripcion" class="form-control" placeholder="Ingrese la Descripción" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-check-square"></i> Aplicar</button>
    <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-stop-circle"> Cancelar</i></a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}